<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewPass_NextPage"
    android:id="@+id/newpass_fragment"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/housem" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-45dp"
            android:layout_marginBottom="284dp"
            android:text="Choose residency: "
            android:textColor="#000"
            android:textSize="18sp" />


        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="188dp"
            android:background="@color/colorWhite"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="home_button"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="true"
            tools:ignore="OnClick"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/card"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_view_image_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="4dp"
                        android:layout_weight=".6"
                        android:background="@color/colorWhite"
                        android:gravity="bottom"
                        android:text="Home"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight=".4"
                        android:background="@color/colorWhite"
                        android:gravity="top"
                        android:text=" welcome"
                        android:textSize="14dp" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="98dp"
            android:background="@color/colorWhite"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="home_button"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="true"
            tools:ignore="OnClick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/card"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/office_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_office"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="4dp"
                        android:layout_weight=".6"
                        android:background="@color/colorWhite"
                        android:gravity="bottom"
                        android:text="Office"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="254dp"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight=".4"
                        android:background="@color/colorWhite"
                        android:gravity="top"
                        android:text=" welcome"
                        android:textSize="14dp" />

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>
</FrameLayout>




